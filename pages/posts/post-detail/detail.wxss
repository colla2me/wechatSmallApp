/* detail.wxss */

.head-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx; 
  position: absolute;
  left: 50%;
  top: 180rpx;
  margin-left: -51rpx;
  opacity: 0.7;
}

.article {
  padding: 20rpx 30rpx;
}

.profile {
  flex-direction: row;
  color: #999;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.author {
  vertical-align: middle;
  font-size: 32rpx;
  font-weight: 300;
  color: #666;
  margin-right: 20rpx;
}

.const-text {
  font-size: 24rpx;
  margin-right: 30rpx;
}

.date {
  vertical-align: middle;
  font-size: 24rpx;
}

.title {
  margin-top: 30rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
  overflow: hidden;
  position: relative;
}

.tool-img {
  float: right;
  margin-right: 20rpx;
}

.tool image {
  width: 90rpx;
  height: 90rpx;
  vertical-align: middle;
}

.share-icon {
  margin-left: 30rpx;
}

.hr {
  position: absolute;
  top: 45rpx;
  width: 660rpx;
  height: 1px;
  margin: 0 auto;
  vertical-align: middle;
  background: #e5e5e5;
  z-index: -100;
}

.content {
  margin-top: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}