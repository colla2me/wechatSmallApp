/* movie_detail.wxss */
@import "../movie_star/star.wxss";

.movie_cover {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}

.cover_info {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 320rpx;
  display: flex;
  flex-direction: column;
}

.title {
  margin: 50rpx 0 0 40rpx;
  color: #fff;
  font-size: 38rpx;
}

.year {
  margin: 30rpx 0 0 40rpx;
  color: #fff;
  font-size: 30rpx;
}

.wish_comment {
  margin: 50rpx 0 0 40rpx;
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: row;
}

.wish {
  margin-right: 30rpx;
}

.count {
  color: red;
  margin-right: 10rpx;
}

.small_img {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

.summary {
  padding: 40rpx 0 40rpx 40rpx;
  color: #777;
  font-size: 24rpx;
}

.movie_name {
  color: #1f3463;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.dt {
  margin-right: 30rpx;
}

.dd {
  width: 600rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.hr {
  width: 100%;
  height: 1px;
  background: #e5e5e5;
}

.summary_title {
  color: #999;
  margin-bottom: 20rpx;
}

.summary_text {
  padding-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
}

.casting {
  white-space: nowrap;
}

.cast_wrapper {
  display: inline-block;
  width: 200rpx;
  margin-right: 40rpx;
  text-align: center;
  font-size: 0;
}

.cast_img {
  display: block;
  width: 200rpx;
  height: 210rpx;
  margin-bottom: 10rpx;
}

.cast_name {
  font-size: 24rpx;
  white-space: normal;
}
